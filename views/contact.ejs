<%- include partials/header.ejs %>

<section id="about" class="my-5">
  <div class="container">

    <div class="text-center text-md-left">
      <h1 class="display-4 mb-4">Contact</h1>
      <hr class="mb-5">
    </div>

    <div class="row">
      <div class="col">
        <form action="/contact/send" method="post" class="d-flex flex-column">
          <div class="form-group">
            <label for="name">Name:</label>
            <input type="text" class="form-control form-control-lg" name="name" id="name">
          </div>
          <div class="form-group">
            <label for="email">Email:</label>
            <input type="email" class="form-control form-control-lg" name="email" id="email">
          </div>
          <div class="form-group">
            <label for="message">Message:</label>
            <textarea class="form-control form-control-lg" rows="5" name="message" id="message"></textarea>
          </div>
          <button class="btn btn-primary btn-lg submitBtn ml-auto mt-3">Submit</button>
        </form>
      </div>
    </div>

  </div>
</section>

<%- include partials/footer.ejs %>